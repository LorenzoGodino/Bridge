{
  "compilerOptions": {
    "target": "es5",
    "outDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "compileOnSave": true,
   "include": [
        "./src/**/*"
    ],
  "exclude": [
    "node_modules",
    "**/*-aot.ts"
  ]
}
